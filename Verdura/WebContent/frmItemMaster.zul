<?page title="Maestro Productos" contentType="text/html;charset=UTF-8"?>
<zk>
	<style src="style/styleZK.css"></style>
	<window title="Maestro Productos" border="normal"
		apply="org.zkoss.bind.BindComposer"
		viewModel="@id('vm') @init('controller.FrmItemMasterCtrl')">
		<grid>
			<columns>
				<column sclass="columnLabel"></column>
				<column></column>
			</columns>
			<rows>
				<row>
					<label value="Codigo:" sclass="formLabel"></label>
					<combobox sclass="cmbGeneralWithoutButton"
						id="cmbItemCod" autocomplete="true" autodrop="true"
						buttonVisible="false">
					</combobox>
				</row>
				<row>
					<label value="Nombre:" sclass="formLabel"></label>
					<combobox sclass="cmbGeneralWithoutButton"
						id="cmbItemName" autocomplete="true" autodrop="true"
						buttonVisible="false">
					</combobox>
				</row>
				<row spans="2">
					<tabbox>
						<tabs>
							<tab id="tabGeneral" label="General"></tab>
							<tab id="tabSales" label="Ventas"></tab>
							<tab id="tabBuys" label="Compras"></tab>
						</tabs>
						<tabpanels>
							<tabpanel>
								<grid>
									<columns>
										<column sclass="columnLabel"></column>
										<column></column>
									</columns>
									<rows>
										<row>
											<label
												value="Unidad de medida:" sclass="formLabel">
											</label>
											<hbox>
												<combobox
													id="cmbItemUnitCar" sclass="cmbShort" readonly="true"
													value="--">
												</combobox>
												<textbox
													id="txtItemWeightUnit" sclass="txtSideShort">
												</textbox>
											</hbox>
										</row>
										<row>
											<label value="Tipo:"
												sclass="formLabel">
											</label>
											<combobox id="cmbItemType"
												sclass="cmbGeneralButton" readonly="true"
												value="--Seleccione--">
											</combobox>
										</row>
										<row>
											<label value="Lavable:"
												sclass="formLabel">
											</label>
											<radiogroup id="washable">
												<radio
													id="radioItemWashable" radiogroup="washable" label="Si">
												</radio>
												<radio
													id="radioItemNotWashable" radiogroup="washable"
													label="No">
												</radio>
											</radiogroup>
										</row>
									</rows>
								</grid>
							</tabpanel>
							<tabpanel>
								<grid>
									<columns>
										<column sclass="columnLabel"></column>
										<column></column>
									</columns>
									<rows>
										<row>
											<label value="Costo:"
												sclass="formLabel">
											</label>
											<textbox id="txtItemCost"
												sclass="txtGeneral">
											</textbox>
										</row>
									</rows>
								</grid>
							</tabpanel>
							<tabpanel>
								<grid>
									<columns>
										<column sclass="columnLabel"></column>
										<column></column>
									</columns>
									<rows>
										<row>
											<label value="Precio:"
												sclass="formLabel">
											</label>
											<textbox id="txtItemPrice"
												sclass="txtGeneral">
											</textbox>
										</row>
									</rows>
								</grid>
							</tabpanel>
						</tabpanels>
					</tabbox>
				</row>
				<row>
					<radiogroup id="status"
						selectedItem="@save(vm.activo)">
						<radio id="radioItemActive" radiogroup="status"
							label="Activo"
							checked="@load(vm.activo ? 'true':'false')"
							value="true">
						</radio>
						<radio id="radioItemInactive"
							radiogroup="status" label="Inactivo"
							checked="@load(vm.activo ? 'false':'true')"
							value="false">
						</radio>
					</radiogroup>
					<space></space>
				</row>
				<row>
					<hbox>
						<button id="btnSave" label="Guardar"></button>
						<button id="btnCancel" label="Cancelar"
							onClick="@command('clickTest')">
						</button>
					</hbox>
					<space></space>
				</row>
			</rows>
		</grid>
	</window>
</zk>